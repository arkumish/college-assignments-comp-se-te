DROP PROCEDURE  IF EXISTS DISCOUNT;
DELIMITER $$

CREATE PROCEDURE DISCOUNT(IN ID DECIMAL,IN AMT DECIMAL)
 BEGIN
 	DECLARE A DECIMAL;

 	IF ID=1 THEN
 	 
 	 IF AMT >= 3000 THEN
 	  SET A = AMT-0.12 *AMT;
 	 
 	 ELSEIF AMT >=2000 THEN
 	  SET A = AMT-0.05*AMT;
 	 
 	 ELSE 
 	  SET A=AMT;
 	 
 	 END IF;

 	ELSEIF ID=2 THEN
 	 
 	 IF AMT >= 2000 THEN
 	  SET A = AMT - 0.10 * AMT;
 	 
 	 ELSEIF AMT >= 1000 THEN
 	  SET A = AMT - 0.05 * AMT;
 	 
 	 ELSE
 	  SET A=AMT;
 	 
 	 END IF;

 	END IF;

    SELECT A;

 END;
 $$

DELIMITER ;