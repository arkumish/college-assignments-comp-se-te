DROP TRIGGER IF EXISTS STORE_BEFORE_UPDATE; 
DELIMITER $$
CREATE TRIGGER STORE_BEFORE_UPDATE 
 BEFORE UPDATE ON LIB

 FOR EACH ROW
 BEGIN
   INSERT INTO Library_Audit values(old.stu_id,old.book,old.doi,old.fine);
 END; $$
DELIMITER ; 

DROP TRIGGER IF EXISTS STORE_BEFORE_DELETE;
DELIMITER $$
CREATE TRIGGER STORE_BEFORE_DELETE
 BEFORE DELETE ON LIB 
 
 FOR EACH ROW
 BEGIN
  INSERT INTO Library_Audit values(old.stu_id,old.book,old.doi,old.fine); 
 END; $$
DELIMITER ;
